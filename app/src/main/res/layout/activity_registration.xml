<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_homepage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Register"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/gray_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="Name"
                        android:textColor="@color/black" />

                    <com.product.nearme.cview.NeoGramMEditText
                        android:id="@+id/et_Name"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@null"
                        android:backgroundTint="#000000"
                        android:gravity="left|center"
                        android:hint="Name"
                        android:paddingBottom="4dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="Email"
                        android:textColor="@color/black" />

                    <com.product.nearme.cview.NeoGramMEditText
                        android:id="@+id/et_Email"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@null"
                        android:backgroundTint="#000000"
                        android:gravity="left|center"
                        android:hint="Email"
                        android:paddingBottom="4dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="Password"
                        android:textColor="@color/black" />

                    <com.product.nearme.cview.NeoGramMEditText
                        android:id="@+id/et_pwd"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@null"
                        android:backgroundTint="#000000"
                        android:gravity="left|center"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingBottom="4dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"

                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="Confirm Password"
                        android:textColor="@color/black" />

                    <com.product.nearme.cview.NeoGramMEditText
                        android:id="@+id/et_cnfm_pwd"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@null"
                        android:backgroundTint="#000000"
                        android:gravity="left|center"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:maxLength="40"
                        android:paddingBottom="4dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="Mobile"
                        android:textColor="@color/black" />

                    <com.product.nearme.cview.NeoGramMEditText
                        android:id="@+id/et_mobile"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@null"
                        android:backgroundTint="#000000"
                        android:gravity="left|center"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingBottom="4dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="Gender"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/registration_bg"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/txt_gender"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/create_product_et2"
                            android:gravity="center_vertical"
                            android:hint="Month"
                            android:paddingRight="10dp"
                            android:spinnerMode="dialog" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.2"
                            android:src="@mipmap/down_arrow" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="DOB"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/registration_bg"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="1">

                        <com.product.nearme.cview.NeoGramMEditText
                            android:id="@+id/et_date"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.8"
                            android:background="@null"
                            android:backgroundTint="#000000"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="left|center"
                            android:hint="Select Date"
                            android:inputType="number"
                            android:paddingBottom="4dp"
                            android:paddingTop="1dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.2"
                            android:src="@mipmap/down_arrow" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="Category"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/registration_bg"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/txt_category"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/create_product_et2"
                            android:gravity="center_vertical"
                            android:hint="Category"
                            android:paddingRight="10dp"
                            android:spinnerMode="dialog" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.2"
                            android:src="@mipmap/down_arrow" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/registration_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.product.nearme.cview.TypefaceTextview
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center"
                        android:text="Address"
                        android:textColor="@color/black" />

                    <com.product.nearme.cview.NeoGramMEditText
                        android:id="@+id/et_address"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@null"
                        android:backgroundTint="#000000"
                        android:clickable="false"
                        android:focusable="false"
                        android:gravity="left|center"
                        android:hint="Address"
                        android:paddingBottom="4dp"
                        android:paddingTop="1dp"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>


                <com.product.nearme.cview.ButtonTypeface
                    android:id="@+id/btn_create_Account"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:text="CREATE ACCOUNT"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>